<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|bottom"
    android:orientation="vertical">

    <include layout="@layout/copyright_toolbar" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/emotion_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/emotion_group"
            android:paddingLeft="16dp"
            android:text="emotion :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/emotion_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:checked="true"
            android:text="info" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/emotion_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="warning" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/emotion_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="success" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/emotion_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="error" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/emotion_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="fail" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/emotion_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="complete" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/emotion_forbid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="forbid" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/emotion_waiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="waiting" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/bg_color_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/position_group"
            android:paddingLeft="16dp"
            android:text="bgColor :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/bg_color_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:checked="true"
            android:text="default" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/bg_color_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="#3F51B5" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/bg_color_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="#FF4081" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/msg_color_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/msg_color_group"
            android:paddingLeft="16dp"
            android:text="msg color :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/color_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:checked="true"
            android:text="white(default)" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/color_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="red" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/msg_size_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/msg_size_group"
            android:paddingLeft="16dp"
            android:text="msg size :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/size_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:checked="true"
            android:text="14sp(default)" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/size_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="20sp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/msg_bold_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/msg_bold_group"
            android:paddingLeft="16dp"
            android:text="msg bold :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="bold" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/not_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:checked="true"
            android:text="not bold" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/duration_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/duration_group"
            android:paddingLeft="16dp"
            android:text="duration :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/duration_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:checked="true"
            android:text="short" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/duration_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="long" />
    </RadioGroup>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/show_toast"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:text="Show" />
</LinearLayout>
