<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vincent_series_smart_toast_default_bg"
    android:minWidth="148dp"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/emotion_icon"
        android:layout_marginBottom="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/ic_smart_toast_info" />

    <TextView
        android:id="@+id/emotion_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2dp"
        android:maxLines="3"
        android:text="I'm a Toast"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</LinearLayout>